{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://launch.adobe.com/schemas/extension-package-web.json",
  "allOf": [
    {
      "$ref": "extension-package.json#/definitions/schema"
    }
  ],
  "properties": {
    "name": {},
    "version": {},
    "displayName": {},
    "description": {},
    "iconPath": {},
    "author": {},
    "viewBasePath": {},
    "main": {},
    "exchangeUrl": {},
    "configuration": {
      "allOf": [
        {
          "$ref": "extension-package.json#/definitions/configuration"
        }
      ],
      "properties": {
        "viewPath": {},
        "schema": {},
        "transforms": {
          "$ref": "#/definitions/transforms"
        }
      },
      "additionalProperties": false
    },
    "hostedLibFiles": {
      "type": "array",
      "items": {
        "$ref": "extension-package.json#/definitions/libPath"
      }
    },
    "events": {
      "$ref": "#/definitions/features"
    },
    "conditions": {
      "$ref": "#/definitions/features"
    },
    "actions": {
      "$ref": "#/definitions/features"
    },
    "dataElements": {
      "$ref": "#/definitions/features"
    },
    "sharedModules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "$ref": "extension-package.json#/definitions/name"
          },
          "libPath": {
            "$ref": "extension-package.json#/definitions/libPath"
          }
        },
        "additionalProperties": false,
        "required": [
          "name",
          "libPath"
        ]
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "features": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "extension-package.json#/definitions/feature"
          }
        ],
        "properties": {
          "name": {},
          "displayName": {},
          "categoryName": {},
          "viewPath": {},
          "libPath": {
            "$ref": "extension-package.json#/definitions/libPath"
          },
          "schema": {
            "type": "object"
          },
          "transforms": {
            "$ref": "#/definitions/transforms"
          }
        },
        "additionalProperties": false,
        "required": [
          "libPath",
          "schema"
        ]
      }
    },
    "transforms": {
      "type": "array",
      "items": {
        "type": "object",
        "oneOf": [
          {
            "properties": {
              "type": {
                "enum": [
                  "file"
                ]
              },
              "propertyPath": {
                "type": "string",
                "minLength": 1
              }
            },
            "additionalProperties": false,
            "required": [
              "type",
              "propertyPath"
            ]
          },
          {
            "properties": {
              "type": {
                "enum": [
                  "function"
                ]
              },
              "propertyPath": {
                "type": "string",
                "minLength": 1
              },
              "parameters": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              }
            },
            "additionalProperties": false,
            "required": [
              "type",
              "propertyPath"
            ]
          },
          {
            "properties": {
              "type": {
                "enum": [
                  "customCode"
                ]
              }
            }
          }
        ]
      }
    }
  }
}