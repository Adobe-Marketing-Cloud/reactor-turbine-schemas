{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "http://launch.adobe.com/schemas/extension-package-mobile.json",
  "allOf": [
    {
      "$ref": "#/definitions/schema"
    }
  ],
  "properties": {
    "name": {},
    "version": {},
    "displayName": {},
    "description": {},
    "iconPath": {},
    "author": {},
    "viewBasePath": {},
    "main": {},
    "exchangeUrl": {},
    "configuration": {
      "allOf": [
        {
          "$ref": "#/definitions/configuration"
        }
      ],
      "properties": {
        "viewPath": {},
        "schema": {}
      },
      "additionalProperties": false
    },
    "platform": {
      "enum": [
        "mobile"
      ]
    },
    "repositories": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "#/definitions/cocoapod"
          },
          {
            "$ref": "#/definitions/maven"
          }
        ]
      }
    },
    "events": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/feature-condition"
      }
    },
    "conditions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/feature-condition"
      }
    },
    "actions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/feature-action"
      }
    },
    "dataElements": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/feature-dataElement"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "platform",
    "repositories"
  ],
  "definitions": {
    "maven": {
      "type": "object",
      "properties": {
        "groupId": {
          "type": "string",
          "pattern": "^[\\w\\.]+$"
        },
        "artifactId": {
          "type": "string",
          "pattern": "^[\\w\\-]+$"
        },
        "version": {
          "type": "string",
          "pattern": "^((\\(|\\[),?[0-9]+(?=.*(\\)|\\])$)|[0-9]+)\\.[0-9]+(\\.[0-9]+)?(-[A-z]+)?(-[0-9]+)?(|,?(\\)$|\\]$)|((,?(\\]|\\)),(\\(|\\[),?|,)[0-9]+\\.[0-9]+(\\.[0-9]+)?(-[A-z]+)?(-[0-9]+)?,?(\\)|\\])))$"
        }
      },
      "additionalProperties": false,
      "required": [
        "groupId",
        "artifactId",
        "version"
      ]
    },
    "cocoapod": {
      "type": "object",
      "properties": {
        "libraryName": {
          "type": "string",
          "pattern": "^[\\w\\.]+$"
        },
        "version": {
          "type": "string",
          "pattern": "^~?>?\\w?[0-9]+\\.[0-9]+(\\.[0-9]+)?$"
        }
      },
      "additionalProperties": false,
      "required": [
        "libraryName",
        "version"
      ]
    },
    "feature-schema": {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string"
        },
        "type": {
          "enum": [
            "array",
            "object"
          ]
        }
      },
      "required": [
        "$schema",
        "type"
      ]
    },
    "feature-condition": {
      "allOf": [
        {
          "$ref": "#/definitions/feature"
        }
      ],
      "properties": {
        "name": {},
        "categoryName": {},
        "displayName": {},
        "viewPath": {},
        "schema": {
          "allOf": [
            {
              "$ref": "#/definitions/feature-schema"
            }
          ],
          "properties": {
            "$schema": {},
            "type": {
              "enum": [
                "array"
              ]
            },
            "items": {
              "type": "object",
              "properties": {
                "allOf": {
                  "type": "array",
                  "items": {
                    "oneOf": [
                      {
                        "type": "object",
                        "properties": {
                          "$ref": {
                            "enum": [
                              "https://assets.adobedtm.com/activation/reactor/schemas/1.0/extension-definitions-mobile.json#/definitions/condition"
                            ]
                          }
                        },
                        "required": [
                          "$ref"
                        ]
                      }
                    ]
                  },
                  "maxItems": 1,
                  "minItems": 1
                }
              },
              "required": [
                "allOf"
              ]
            }
          },
          "required": [
            "items"
          ]
        }
      },
      "required": [
        "schema"
      ],
      "additionalProperties": false
    },
    "feature-action": {
      "allOf": [
        {
          "$ref": "#/definitions/feature"
        }
      ],
      "properties": {
        "name": {},
        "categoryName": {},
        "displayName": {},
        "viewPath": {},
        "schema": {
          "type": "object"
        }
      },
      "additionalProperties": false
    },
    "feature-dataElement": {
      "allOf": [
        {
          "$ref": "#/definitions/feature"
        }
      ],
      "properties": {
        "name": {},
        "categoryName": {},
        "displayName": {},
        "viewPath": {},
        "schema": {
          "allOf": [
            {
              "$ref": "#/definitions/feature-schema"
            }
          ],
          "properties": {
            "$schema": {},
            "allOf": {
              "type": "array",
              "items": {
                "oneOf": [
                  {
                    "type": "object",
                    "properties": {
                      "$ref": {
                        "enum": [
                          "https://assets.adobedtm.com/activation/reactor/schemas/1.0/extension-definitions-mobile.json#/definitions/data-element"
                        ]
                      }
                    },
                    "required": [
                      "$ref"
                    ]
                  }
                ]
              },
              "maxItems": 1,
              "minItems": 1
            }
          },
          "required": [
            "allOf"
          ]
        }
      },
      "required": [
        "schema"
      ],
      "additionalProperties": false
    },
    "schema": {
      "type": "object",
      "properties": {
        "name": {
          "$ref": "#/definitions/name"
        },
        "version": {
          "$ref": "#/definitions/semver"
        },
        "displayName": {
          "$ref": "#/definitions/displayName"
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "iconPath": {
          "type": "string",
          "minLength": 1,
          "pattern": "^(?!\\/)[\\/a-zA-Z_\\-\\s0-9\\.]+\\.svg$"
        },
        "author": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1
            },
            "url": {
              "$ref": "#/definitions/url"
            },
            "email": {
              "$ref": "#/definitions/email"
            }
          },
          "required": [
            "name"
          ]
        },
        "viewBasePath": {
          "$ref": "#/definitions/basePath"
        },
        "main": {
          "$ref": "#/definitions/libPath"
        },
        "exchangeUrl": {
          "type": "string",
          "minLength": 1,
          "pattern": "^https:\\/\\/(?:(?:experiencecloud|www)\\.)?adobeexchange\\.com"
        },
        "configuration": {
          "$ref": "#/definitions/configuration"
        },
        "events": {},
        "conditions": {},
        "actions": {},
        "dataElements": {}
      },
      "required": [
        "name",
        "version",
        "displayName",
        "description",
        "author",
        "viewBasePath"
      ]
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "pattern": "^(?![_\\.])[a-z0-9~_\\-\\.]{1,214}$"
    },
    "displayName": {
      "type": "string",
      "minLength": 1
    },
    "basePath": {
      "type": "string",
      "minLength": 1,
      "pattern": "^(?!\\/)[\\/a-zA-Z_\\-\\s0-9\\.]+$"
    },
    "libPath": {
      "type": "string",
      "minLength": 1,
      "pattern": "^(?!\\/)[\\/a-zA-Z_\\-\\s0-9\\.]+\\.js$"
    },
    "viewPath": {
      "type": "string",
      "minLength": 1,
      "pattern": "^(?!\\/)[\\/a-zA-Z_\\-\\s0-9\\.]+\\.html([?#].*)?$"
    },
    "url": {
      "type": "string",
      "minLength": 1,
      "format": "uri"
    },
    "email": {
      "type": "string",
      "minLength": 1,
      "format": "email"
    },
    "semver": {
      "type": "string",
      "minLength": 1,
      "pattern": "^\\bv?(?:0|[1-9][0-9]*)(?:\\.(?:0|[1-9][0-9]*)){2}(?:-[\\da-z\\-]+(?:\\.[\\da-z\\-]+)*)?(?:\\+[\\da-z\\-]+(?:\\.[\\da-z\\-]+)*)?\\b$"
    },
    "configuration": {
      "type": "object",
      "properties": {
        "viewPath": {
          "$ref": "#/definitions/viewPath"
        },
        "schema": {
          "type": "object"
        }
      },
      "required": [
        "viewPath",
        "schema"
      ]
    },
    "feature": {
      "type": "object",
      "properties": {
        "name": {
          "$ref": "#/definitions/name"
        },
        "displayName": {
          "$ref": "#/definitions/displayName"
        },
        "categoryName": {
          "$ref": "#/definitions/displayName"
        },
        "viewPath": {
          "$ref": "#/definitions/viewPath"
        }
      },
      "required": [
        "name",
        "displayName"
      ]
    }
  }
}
