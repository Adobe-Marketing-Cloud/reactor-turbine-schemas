{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1,
            "pattern": "RL[a-zA-Z0-9]{32}"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "events": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "delegateName": {
                  "$ref": "#/definitions/name"
                },
                "extensionName": {
                  "$ref": "#/definitions/name"
                },
                "ruleOrder": {
                  "type": "number"
                },
                "settings": {
                  "type": "object"
                }
              },
              "required": [
                "delegateName",
                "extensionName",
                "ruleOrder"
              ],
              "additionalProperties": false
            }
          },
          "conditions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "delegateName": {
                  "$ref": "#/definitions/name"
                },
                "extensionName": {
                  "$ref": "#/definitions/name"
                },
                "settings": {
                  "type": "object"
                },
                "negate": {
                  "type": "boolean"
                },
                "timeout": {
                  "type": "integer",
                  "minimum": 0
                }
              },
              "required": [
                "delegateName",
                "extensionName"
              ],
              "additionalProperties": false
            }
          },
          "actions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "delegateName": {
                  "$ref": "#/definitions/name"
                },
                "extensionName": {
                  "$ref": "#/definitions/name"
                },
                "settings": {
                  "type": "object"
                },
                "timeout": {
                  "type": "integer",
                  "minimum": 0
                },
                "delayNext": {
                  "type": "boolean"
                }
              },
              "required": [
                "delegateName",
                "extensionName"
              ],
              "additionalProperties": false
            }
          }
        },
        "required": [
          "name",
          "id"
        ],
        "additionalProperties": false
      }
    },
    "dataElements": {
      "type": "object",
      "patternProperties": {
        "^[^%]+$": {
          "type": "object",
          "properties": {
            "delegateName": {
              "$ref": "#/definitions/name"
            },
            "extensionName": {
              "$ref": "#/definitions/name"
            },
            "settings": {
              "type": "object"
            },
            "defaultValue": {
              "type": "string"
            },
            "forceLowerCase": {
              "type": "boolean"
            },
            "cleanText": {
              "type": "boolean"
            },
            "storageDuration": {
              "enum": [
                "pageview",
                "session",
                "visitor"
              ]
            }
          },
          "required": [
            "delegateName",
            "extensionName"
          ],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "extensions": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "displayName": {
            "type": "string",
            "minLength": 1
          },
          "hostedLibFilesBaseUrl": {
            "type": "string",
            "minLength": 1
          },
          "settings": {
            "type": "object"
          }
        },
        "required": [
          "displayName"
        ],
        "additionalProperties": false
      }
    },
    "company": {
      "type": "object",
      "properties": {
        "orgId": {
          "type": "string",
          "pattern": "[a-zA-Z0-9]{24}@AdobeOrg"
        }
      },
      "required": [
        "orgId"
      ],
      "additionalProperties": false
    },
    "property": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "settings": {
          "type": "object",
          "properties": {
            "undefinedVarsReturnEmpty": {
              "type": "boolean"
            },
            "domains": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^((?=[a-z0-9-_]{1,63}\\.)(xn--)?[a-z0-9_]+(-[a-z0-9_]+)*\\.)+[a-z]{2,63}$"
              },
              "uniqueItems": true
            },
            "ruleComponentSequencingEnabled": {
              "type": "boolean"
            }
          },
          "required": [
            "undefinedVarsReturnEmpty",
            "domains",
            "ruleComponentSequencingEnabled"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "name",
        "settings"
      ],
      "additionalProperties": false
    },
    "buildInfo": {
      "type": "object",
      "properties": {
        "turbineVersion": {
          "$ref": "#/definitions/semver"
        },
        "turbineBuildDate": {
          "format": "date-time"
        },
        "buildDate": {
          "format": "date-time"
        },
        "environment": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "turbineVersion",
        "turbineBuildDate",
        "buildDate",
        "environment"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "company",
    "property",
    "buildInfo"
  ],
  "additionalProperties": false,
  "definitions": {
    "name": {
      "type": "string",
      "minLength": 1,
      "pattern": "^(?![_\\.])[a-z0-9~_\\-\\.]{1,214}$"
    },
    "semver": {
      "type": "string",
      "minLength": 1,
      "pattern": "^\\bv?(?:0|[1-9][0-9]*)(?:\\.(?:0|[1-9][0-9]*)){2}(?:-[\\da-z\\-]+(?:\\.[\\da-z\\-]+)*)?(?:\\+[\\da-z\\-]+(?:\\.[\\da-z\\-]+)*)?\\b$"
    }
  }
}
